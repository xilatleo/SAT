@model SAT.DATA.EF.Student

@{
    ViewBag.Title = "Details";
}

<!-- Page info -->
<div class="page-info-section set-bg" data-setbg="/Content/img/page-bg/4.jpg">
    <div class="container">
        <div class="site-breadcrumb">
            <a href="/">Home</a>
            <span>Student Information Details</span>
        </div>
    </div>
</div>
<!-- Page info end -->

<div class="containerX">
    <div id="studentContainer">
        <div id="courseHeader"><h4 class="mainCenterText">Student</h4></div>
        <hr />
        

            <div id="courseLeft">
                <dt>
                    Student Name: @Model.FullName
                </dt>

                <dd>
                    <img src="~/Content/img/Students/@Model.PhotoUrl" alt="@Model.FullName" />
                </dd>
            </div>

            <div id="studentDetailsWrapper">
                <div id="courseRight2">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Address)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Address)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.City)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.City)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.State)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.State)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.ZipCode)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.ZipCode)
                        </dd>
                    </dl>

                </div>


                <div id="courseRight">
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.Phone)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Phone)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Email)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Email)
                        </dd>


                        <dt>
                            @Html.DisplayNameFor(model => model.Major)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Major)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.StudentStatus.SSName)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.StudentStatus.SSName)
                        </dd>
                    </dl>
                </div>
                <div style="clear:both"></div>   
                <div id="studentDetailButtons">
                    <div class="btn btn-danger orangeButton"> @Html.ActionLink("Edit", "Edit", new { id = Model.StudentId }) </div>
                    <div class="btn btn-primary backButton"> @Html.ActionLink("Back to List", "Index")</div>
                </div>
            </div>
         
    </div>
</div>

